{
	"$schema": "https://biomejs.dev/schemas/1.5.3/schema.json",
	"files": {
		"ignore": [
			"public",
			"node_modules",
			".next",
			".out",
			".vscode",
			".idea",
			".github",
			".git",
			"coverage",
			"dist",
			"build",
			"out",
			"storybook-static",
			"storybook-static-skip",
			"stor"
		]
	},
	"organizeImports": {
		"enabled": true
	},
	"formatter": {
		"enabled": true,
		"formatWithErrors": false,
		"indentStyle": "tab",
		"indentWidth": 2,
		"lineWidth": 120,
		"lineEnding": "lf"
	},
	"linter": {
		"enabled": true,
		"rules": {
			"all": true,
			"nursery": {
				"all": true,
				"noNodejsModules": "off"
			}
		},
		"ignore": ["*env/*"]
	},
	"overrides": [
		{
			"include": [
				"next.config.mjs",
				"tailwind.config.ts",
				"error.tsx",
				"layout.tsx",
				"loading.tsx",
				"not-found.tsx",
				"page.tsx",
				"route.ts",
				"template.tsx",
				".storybook",
				"*.stories.*",
				"*.stories-skip.*"
			],
			"linter": {
				"rules": {
					"style": {
						"noDefaultExport": "off"
					}
				}
			}
		},
		{
			"include": ["*.stories-skip.*"],
			"linter": {
				"rules": {
					"nursery": {
						"useFilenamingConvention": "off"
					}
				}
			}
		}
	]
}
